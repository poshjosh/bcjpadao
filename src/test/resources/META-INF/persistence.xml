<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="bctasktrackerPUmaster" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bc.tasktracker.jpa.entities.Taskresponse</class>
    <class>com.bc.tasktracker.jpa.entities.Appointment</class>
    <class>com.bc.tasktracker.jpa.entities.Doc</class>
    <class>com.bc.tasktracker.jpa.entities.Task</class>
    <class>com.bc.tasktracker.jpa.entities.Unit</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>  
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://europa.ignitionserver.net:3306/loosebox_naftasktrackerweb?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="loosebox_nafuser"/>
      <property name="javax.persistence.jdbc.password" value="7ApacheLaunchers"/>
      <!--property name="javax.persistence.schema-generation.database.action" value="create"/-->
      <!--property name="javax.persistence.schema-generation.create-source" value="metadata"/-->
      <property name="eclipselink.connection-pool.default.initial" value="1"/>
      <property name="eclipselink.connection-pool.default.min" value="64"/>
      <property name="eclipselink.connection-pool.default.max" value="64"/>
      <property name="eclipselink.jdbc.cache-statements" value="true"/>
      <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
      <property name="eclipselink.jdbc.batch-writing.size" value="1000"/>
      <!--property name="eclipselink.logging.level" value="FINE"/-->
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="false"/>
    </properties>
  </persistence-unit>
</persistence>

